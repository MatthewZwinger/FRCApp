<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="matthewzwinger.scoutingappxml.MainActivity"
    tools:showIn="@layout/activity_main"
    android:addStatesFromChildren="false">

<TableRow>

    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:visibility="visible"
        android:background="#A00014"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:visibility="visible"
        android:background="#A00014"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:visibility="visible"
        android:background="#FFD200"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:visibility="visible"
        android:background="#FFD200"
        />

</TableRow>
    <TableRow>

        <EditText
            android:text="Comments"
            android:gravity="center"
            android:textSize="28dp"
            android:layout_rowWeight="4"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:layout_span="4"
            android:layout_height="100dp"
            android:layout_width="271dp"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:textOff="No         Preload"
            android:textOn="preload"
            android:textSize="20dp"
            android:layout_height="114dp"
            android:layout_width="150dp"
            android:layout_column="0"
            android:onClick="#000000"
            />

        <ToggleButton
            android:textOff="No            Reach"
            android:textOn="Reach"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_height="114dp"
            android:layout_width="150dp"
            android:checked="false"
            android:layout_gravity="right"
            />

        <ToggleButton
            android:textOn="Autonomous Successful"
            android:textOff="Autonomous Failure "
            android:layout_column="2"
            android:textSize="18dp"
            android:layout_width="150dp"
            android:layout_height="114dp"
            android:layout_gravity="right"
            />

        <ToggleButton
            android:textOff="Not        Spybot"
            android:textOn="SpyBot"
            android:layout_height="114dp"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_column="3" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Defense Crosses"
            android:layout_columnWeight="2"
            android:layout_span="2"
            android:id="@+id/textView"
            android:layout_column="1"
            android:gravity="center|bottom"
            android:textSize="28dp"/>

    </TableRow>

    <TableRow
        android:layout_width="400dp"
        android:layout_height="135dp">

        <ToggleButton
            android:layout_width="100dp"
            android:layout_height="114dp"
            android:textSize="15dp"
            android:id="@+id/button"
            android:layout_column="0"
            android:textOn="Portcullis"
            android:textOff="No      Portcullis"
            />

        <ToggleButton
            android:textOff="No                      Moat"
            android:textOn="Moat"
            android:layout_width="100dp"
            android:layout_height="114dp"
            android:textSize="15dp"
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_gravity="fill"
            />

        <ToggleButton
            android:textOff="No         Drawbridge"
            android:textOn="Drawbridge"
            android:layout_height="114dp"
            android:layout_width="100dp"
            android:textSize="15dp"
            android:layout_column="2"
            android:layout_gravity="fill"
            />

        <ToggleButton
            android:textOff="No         Rockwall"
            android:textOn="Rockwall"
            android:layout_height="114dp"
            android:layout_width="100dp"
            android:textSize="15dp"
            android:layout_column="3"
            android:layout_gravity="fill"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:textOff="No   Cheval             De Frise"
            android:textOn="Cheval de Frise"
            android:layout_column="0"
            android:layout_height="114dp"
            android:layout_width="135dp"
            android:textSize="13dp"
            android:layout_gravity="right"
            />

        <ToggleButton
            android:textOff="No         Ramparts"
            android:textOn="Ramparts"
            android:layout_column="1"
            android:layout_height="114dp"
            android:layout_width="135dp"
            android:textSize="15dp"
            android:layout_gravity="fill"
            />

        <ToggleButton
            android:textOff="No         Sallyport"
            android:textOn="Sallyport"
            android:textSize="15dp"
            android:layout_column="2"
            android:layout_height="114dp"
            android:layout_width="135dp"
            android:layout_gravity="fill"
            />

        <ToggleButton
            android:textOff="No                       Rough Terrain"
            android:textOn="Rough terrian"
            android:textSize="13dp"
            android:layout_column="3"
            android:layout_height="114dp"
            android:layout_width="135dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:textOff="No Low Bar"
            android:textOn="Low Bar"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_columnWeight="2"
            android:layout_span="2"
            android:layout_height="111dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Low Goal"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:layout_span="2"
            android:layout_height="111dp"
            android:textSize="23dp"
            />

        <Button
            android:text="High Goal"
            android:layout_column="2"
            android:layout_columnWeight="2"
            android:layout_span="2"
            android:layout_height="111dp"
            android:textSize="23dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:textOff="No Tortuga"
            android:textOn="Tortuga"
            android:layout_column="0"
            android:layout_height="111dp"
            android:layout_columnWeight="2"
            android:layout_span="2"
            android:textSize="23dp"
            />
    </TableRow>
<TableRow>
    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:visibility="visible"
        android:background="#FFD200"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:visibility="visible"
        android:background="#FFD200"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:visibility="visible"
        android:background="#A00014"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:visibility="visible"
        android:background="#A00014"
        />

</TableRow>

</TableLayout>
